<header class="navbar navbar-fixed-top navbar-inverse">
  <nav>
    <div class="container-fluid">
      <!-- The Header name, which is workshop name -->
      <div class="navbar-header">
        <%= link_to image_tag("logo.png", alt: "CarServIt logo", :size => "122x37"), root_path, id: "logo" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li><%= link_to "Dashboard",   root_path %></li>
            <li><%= link_to "Help",   help_path %></li>
              <% if current_workshop.admin? %>
                <li><%= link_to "Workshops", all_workshops_path %></li>
              <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "View Profile", current_workshop %></li>
                <li><%= link_to "Settings", edit_workshop_path(current_workshop) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>

          <% else %>

            <li><%= link_to "Home",   root_path %></li>
            <li><%= link_to "Help",   help_path %></li>
            <li><%= link_to "Log in", login_path %></li>
            <li><%= link_to "Sign Up", signup_path %></li>

          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
