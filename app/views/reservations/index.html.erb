<% provide(:title, 'All reservation') %>
<h4 class="center"><b>All Reservation</b></h4>
<%= form_tag(reservations_path, :method => "get", class: "navbar-form") do %>
  <div class="input-append center">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Reservation" %>
    <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
      of using a Rails form helper -->
  <button class="btn btn-primary " type="submit"><i class="icon-search">Search</i></button>
</div>
<% end %>

<!-- <ul class="reserved"> -->
    <table class="table">
      <tr>
        <td class="no-repeat-header">ID</td>
        <td class="no-repeat-header">Reg Number</td>
        <td class="no-repeat-header">Time</td>
        <td class="no-repeat-header">Date</td>
      </tr>
      <% @reservation.each do |reservation| %>
      <tr>
        <td><%= link_to reservation.id, reservation %></td>
        <td><%= link_to reservation.car_reg_number, reservation %></td>
        <td><%= link_to reservation.time.strftime('%I:%M %P'), reservation %></td>
        <td><%= link_to reservation.date, reservation %></td>
      </tr>
      <% end %>
    </table>
