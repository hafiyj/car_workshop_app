<div class="jumbotron workshop-header">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- The Header name, which is workshop name -->
      <div class="navbar-header">
        <a class="navbar-brand">Good day, <%= current_workshop.name %>!</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Place Reservation", new_reserv_path, target: "blank" %></li>
          <li><%= link_to "Appointment", 'appointment' %></li>
          <li><%= link_to "All Reservations", reservations_path %></li>
          <li><%= link_to "Statistics", 'statistic' %></li>
        </ul>
      </div>
    </div>
  </nav>

  <hr>

  <div class="panel panel-body header-small-sec">
    <% if @reservation.count != 0 %>
      <h2>Today's Reservation</h2>
      <div class="panel panel-body">
        <%= render 'landing_pages/appointment_table' %>
      </div>
    <% elsif %>
      <h2>No reservation found, feel free to <%= link_to "place one", new_reserv_path, target: "blank" %>.</h2>
    <% end %>
  </div>
</div>
